{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "outDir": "./dist",
    "noEmit": false,
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/mcp/**/*.ts", "src/lib/**/*.ts", "src/types/**/*.ts", "src/config/**/*.ts"],
  "exclude": ["node_modules", "src/app", "**/*.test.ts"]
}

