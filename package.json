{
  "name": "cvcrm-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server para integração com API do CV CRM",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run build:mcp",
    "build:mcp": "tsc --project tsconfig.mcp.json",
    "start": "next start",
